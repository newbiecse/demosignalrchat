@using DemoSignalRChat.ViewModels
@model UserViewModel

    <div id="groups" class="col-md-2">
        <h3>Favorites</h3>
        <p><a>Lap trinh c#</a></p>
        <p><a>Make money online</a></p>
    </div>

    <div id="main-left" class="col-md-5 col-sm-5 col-xs-12">
            @Html.Partial("_FormPost")
            @Html.Partial("_StatusList", ViewData["listStatusNewest"])
    </div><!--\#main-left-->


    <div id="main-center" class="col-md-3 col-sm-5 hidden-xs">
        <div class="row">

        </div>
        <div class="row">
            @Html.Partial("_SuggestFriend")
        </div>
    </div><!--\#main-center-->


    <div id="main-right" class="col-md-2 hidden-sm hidden-xs">
        <div class="row">
            @Html.Partial("_News")
        </div>
        <div class="row">
            @Html.Partial("_ChatList", ViewData["friendList"])
        </div>
    </div><!--\#main-right-->

    <div id="window-chat-list"></div>

@section Scripts{

    <!--Reference the SignalR library. -->
    <script src="~/Scripts/jquery.signalR-2.0.0.min.js"></script>
    <!--Reference the autogenerated SignalR hub script. -->
    <script src="~/signalr/hubs"></script>

    <!-- init global variables -->
    <script>
        var userName = '@Model.UserName';
        var curUserId = '@Model.UserId';
        var curAvatar = '@Model.Avatar';
    </script>

    <script src="~/Scripts/myScripts/Layout/display_cur_user_avatar.js"></script>

    <script src="~/Scripts/myScripts/Chats/server/chathubs.js"></script>

    <script src="~/Scripts/myScripts/Chats/client/onConnected.js"></script>
    <script src="~/Scripts/myScripts/Chats/client/onNewUserConnected.js"></script>

    <script src="~/Scripts/myScripts/Chats/client/offChat.js"></script>
    <script src="~/Scripts/myScripts/Chats/client/signOut.js"></script>

    <script src="~/Scripts/myScripts/Chats/openChatBox.js"></script>

    <script src="~/Scripts/myScripts/Chats/client/messageReceived.js"></script>
    <script src="~/Scripts/myScripts/Chats/client/privateMessageReceived.js"></script>

    <script src="~/Scripts/myScripts/Chats/server/sendMessageToAll.js"></script>
    <script src="~/Scripts/myScripts/Chats/server/sendPrivateMessage.js"></script>

    <script src="~/Scripts/myScripts/Like/client/like.js"></script>
    <script src="~/Scripts/myScripts/Like/server/like.js"></script>

    <script src="~/Scripts/myScripts/Comment/client/comment.js"></script>
    <script src="~/Scripts/myScripts/Comment/server/comment.js"></script>

    <script src="~/Scripts/myScripts/Chats/server/turnOffChat.js"></script>
    <script src="~/Scripts/myScripts/Chats/server/signOut.js"></script>

    <script src="~/Scripts/myScripts/Chats/replaceURLWithHTMLLinks.js"></script>
    <script src="~/Scripts/myScripts/Chats/replaceEmotion.js"></script>


    <script>
        $(document).ready(function () {

            var request;

            $("#post-status").submit(function () {

                $form = $(this);

                request = $.ajax({
                    url: "/Home/PostLink",
                    type: "POST",
                    data: $form.serialize()
                })
                    .done(function (response, textStatus, jqXHR) {
                        alert("success");
                        console.log(response);
                    })
                    .fail(function (response, textStatus, jqXHR) {
                        alert("error");
                    });

                event.preventDefault();


            });// end submit
        });// end ready

    </script>

    <script src="~/Scripts/myScripts/Layout/jquery.autosize.js"></script>
    <script>
        // Example:
        $(document).ready(function () {
            $('textarea').autosize();
        });
    </script>


}