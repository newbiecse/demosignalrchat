<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - TripTrip</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" type="text/css" href="~/Content/myStyle.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/images.css" />

    <link rel="stylesheet" type="text/css" href="~/Content/layout.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/mainleft.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/maincenter.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/mainright.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/group.css" />
    <link href="~/Content/searchResult.css" rel="stylesheet" />

    <link href="~/Content/mainNavbar.css" rel="stylesheet" />

    <link href="~/Content/notify.css" rel="stylesheet" />

    <link rel="stylesheet" type="text/css" href="~/Content/imageUpload.css" />

    <link href="~/Content/peopleliked.css" rel="stylesheet" />


</head>
<body>
        <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @Html.ActionLink("Trip Trip", "Index", "Home", null, new { @class = "navbar-brand" })
                </div><!--\.navbar-header-->

                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        @Html.Partial("_WaitingPartial")
                    </ul><!--\ul.navbar-nav-->
                    
                    @Html.Partial("_SearchFormPartial")
                    

                    <ul class="nav navbar-nav navbar-right">
                        <li>@Html.ActionLink("Home", "Index", "Home")</li>
                        @*<li>@Html.Action("Wall", "Home")</li>*@

                         @Html.Partial("_LoginPartial")
                    </ul><!--\ul.navbar-right-->

</div><!--\.navbar-collapse-->
            </div>
         </nav>


        <div id="main" class="container">
            @RenderBody()
        </div>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
</body>
</html>
