<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - TripTrip</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" type="text/css" href="~/Content/myStyle.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/images.css" />

    <link rel="stylesheet" type="text/css" href="~/Content/layout.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/mainleft.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/maincenter.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/mainright.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/group.css" />
    <link href="~/Content/searchResult.css" rel="stylesheet" />

    <link href="~/Content/mainNavbar.css" rel="stylesheet" />

    <link href="~/Content/notify.css" rel="stylesheet" />

    <link rel="stylesheet" type="text/css" href="~/Content/imageUpload.css" />


</head>
<body>
        <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @Html.ActionLink("Trip Trip", "Index", "Home", null, new { @class = "navbar-brand" })
                </div><!--\.navbar-header-->

                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">

                        <li id="req-Friends" class="dropdown">
                            <a id="btn-req-Friends" href="#" class="dropdown-toggle" data-toggle="dropdown">
                                <span id="numWaitAccept" class="label label-warning">5</span>+<span class="glyphicon glyphicon-user"></span>
                            </a><!--\#btn-req-Friends-->
                            <ul id="listWaitAccept" class="dropdown-menu" style="width: 400px;">
                            </ul><!--\ul#listWaitAccept-->
                        </li><!-- \li#req-Friends -->

                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                <span id="numComment" class="label label-info">1</span>...<span class="glyphicon glyphicon-comment"> </span>
                            </a>
                        </li><!-- \li require addfriend -->


                    </ul><!--\ul.navbar-nav-->

                    <form id="searchform" class="navbar-form navbar-left" role="search">
                        <div class="form-group">
                            <div class="input-group" style="width: 300px; position: relative;">
                                <input type="text" class="form-control" placeholder="Search" name="paramSearch" id="txtSearch" />
                                <span class="input-group-btn">
                                    <button class="btn btn-success" type="button">
                                        <span class="glyphicon glyphicon-search"></span>
                                    </button>
                                </span><!-- \span -->
                                <div id="search-result">
                                </div>
                            </div><!-- \.input-group -->
                        </div><!-- \.form-group -->
                    </form><!-- \form -->


                    <ul class="nav navbar-nav navbar-right">
                        @Html.Partial("_LoginPartial")
                    </ul><!--\ul.navbar-right-->

                </div><!--\.navbar-collapse-->
            </div>
         </nav>


        <div id="main" class="container">
            @RenderBody()
        </div>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
</body>
</html>
