@using DemoSignalRChat.ViewModels
@model IEnumerable<StatusViewModel>

    <div id="status-list" class="row">

    @foreach(StatusViewModel status in Model)
    { 

        <div class="status">

            <div class="status-header">

                <div class="status-user">
                    <a href='#'>
                        <img src="@status.UserOwner.Avatar" class="img-circle img60x60" />
                    </a>
                </div><!-- .status-user -->

                <div class="status-content">
                    <a class="peple-name" href='#'>@status.UserOwner.UserName</a>@status.Message
                    <div class="box-like-share">
                        <a>Like</a> &nbsp;<span class="glyphicon glyphicon-thumbs-up"></span> <span class="numLike">0</span>
                        <a>Share</a> &nbsp;<span class="glyphicon glyphicon-share-alt"></span> <span class="numShare">0</span>
                    </div>
                

                </div><!-- .status-content -->

                <div style="clear: left"></div>

            </div><!-- .status-header -->

                <hr />

            <div class="list-comment">
            @foreach(CommentViewModel comment in status.ListCommented)
            {
                    <div class="row comment">
                        <div class="col-md-1">
                            <a href="#">
                                <img src="@comment.UserOwner.Avatar" class="img-rounded img33x33">
                            </a>
                        </div><!-- .comment-user -->
                        <div class="col-md-10">
                            <p class="comment-content">
                                <a href="#">@comment.UserOwner.UserName</a>
                                @comment.Content
                            </p>
                        </div><!-- .user-info -->
                    </div><!-- comment -->
            }
                    <div class="row block-textarea">
                        <div class="col-md-1">
                            <a href="#">
                                <img src="~/Uploads/Users/backham.jpg" alt="..." class="img-rounded img33x33">
                            </a>
                        </div>
                        <div class="col-md-10">
                            <textarea name="txtComment" rows="1" cols="50" class="form-control txtComment" placeholder="Enter comment..."></textarea>
                        </div>
                    </div>


            </div><!-- .list-comment -->



        </div><!-- .status -->
    }
    </div><!-- #status-list -->
